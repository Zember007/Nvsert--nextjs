{"code":"import { useRef } from 'react';\r\nimport useDebounceCallback from './useDebounceCallback';\r\n/**\r\n * 单击和双击事件处理\r\n * @param singleTap - 单击事件\r\n * @param doubleTap - 双击事件\r\n * @return invokeTap\r\n */\r\nexport default function useContinuousTap(singleTap, doubleTap) {\r\n    // 当前连续点击次数\r\n    const continuousClick = useRef(0);\r\n    const debounceTap = useDebounceCallback((...args) => {\r\n        continuousClick.current = 0;\r\n        singleTap(...args);\r\n    }, {\r\n        wait: 300,\r\n    });\r\n    return function invokeTap(...args) {\r\n        continuousClick.current += 1;\r\n        debounceTap(...args);\r\n        // 双击\r\n        if (continuousClick.current >= 2) {\r\n            debounceTap.cancel();\r\n            continuousClick.current = 0;\r\n            doubleTap(...args);\r\n        }\r\n    };\r\n}\r\n//# sourceMappingURL=useContinuousTap.js.map","references":["/Users/georgiiborisov/Documents/Nvsert--nextjs/src/assets/lib/react-photo-view/node_modules/@types/react/ts5.0/index.d.ts","/Users/georgiiborisov/Documents/Nvsert--nextjs/src/assets/lib/react-photo-view/src/hooks/useDebounceCallback.ts"],"map":"{\"version\":3,\"file\":\"useContinuousTap.js\",\"sourceRoot\":\"\",\"sources\":[\"../../../../../src/hooks/useContinuousTap.ts\"],\"names\":[],\"mappings\":\"AAAA,OAAO,EAAE,MAAM,EAAE,MAAM,OAAO,CAAC;AAC/B,OAAO,mBAAmB,MAAM,uBAAuB,CAAC;AAIxD;;;;;GAKG;AACH,MAAM,CAAC,OAAO,UAAU,gBAAgB,CAAI,SAAyB,EAAE,SAAyB;IAC9F,WAAW;IACX,MAAM,eAAe,GAAG,MAAM,CAAC,CAAC,CAAC,CAAC;IAElC,MAAM,WAAW,GAAG,mBAAmB,CACrC,CAAC,GAAG,IAAI,EAAE,EAAE;QACV,eAAe,CAAC,OAAO,GAAG,CAAC,CAAC;QAC5B,SAAS,CAAC,GAAG,IAAI,CAAC,CAAC;IACrB,CAAC,EACD;QACE,IAAI,EAAE,GAAG;KACV,CACF,CAAC;IAEF,OAAO,SAAS,SAAS,CAAC,GAAG,IAAI;QAC/B,eAAe,CAAC,OAAO,IAAI,CAAC,CAAC;QAC7B,WAAW,CAAC,GAAG,IAAI,CAAC,CAAC;QACrB,KAAK;QACL,IAAI,eAAe,CAAC,OAAO,IAAI,CAAC,EAAE;YAChC,WAAW,CAAC,MAAM,EAAE,CAAC;YACrB,eAAe,CAAC,OAAO,GAAG,CAAC,CAAC;YAC5B,SAAS,CAAC,GAAG,IAAI,CAAC,CAAC;SACpB;IACH,CAAC,CAAC;AACJ,CAAC\"}","dts":{