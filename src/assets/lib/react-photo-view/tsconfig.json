{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}